<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Price</th>
      <th>Reviews</th>
      <th>Sizes</th>
      <th>Colors</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.category %></td>
        <td><%= item.price %></td>
        <td><%= item.reviews %></td>
        <td><%= item.sizes %></td>
        <td><%= item.colors %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <td>
          <%= form_for @order_item, remote: true do |f| %>
            <%= f.hidden_field :item_id, value: item.id %>
            <%= f.number_field :quantity, min: 1, max: 10, value: 1 %>
            <%= f.submit 'Add to Cart' %>
          <% end %> 
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %> <br>

<div id="cart">
    <%= render 'carts/cart' %>
</div>


